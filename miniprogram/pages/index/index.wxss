/* pages/index/index.wxss */
.banner{
  width: 100%;
  height: 350rpx;
}
.swip_main{
  width: 100%;
  height: 100%;
}
.notice{
  width: 100%;
  height: 100rpx;
  background-color: #f5f2d7f8;
}
.notice_left{
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  float: left;
}
.notice_left image{
  width: 100%;
  height: 100%;
}
.notice_right{
  width: 600rpx;
  height: 60rpx;
  float: right;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.swiper_item{ 
  font-size: 28rpx;
  font-weight: 600;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}
.nav{
  width: 100%;
  height: 130rpx;
  /* background-color: green; */
}
.nav-banner{
  width: 25%;
  height: 100%;
  background-color: rgba(215, 222, 245, 0.705);
  float: left;
}
.nav-banner-img{
  width: 100%;
  height: 75%;
}
.nav-banner-img image{
  width: 50%;
  height: 80%;
  padding: 10% 25%;
}
.nav-banner-text{
  text-align: center;
  margin-top: -5rpx;
  font-size: 24rpx;
}